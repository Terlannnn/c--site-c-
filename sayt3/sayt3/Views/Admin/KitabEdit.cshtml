        <br><br>

        <select name="KitabYaziciId" id="edityazici" >
            
            @foreach (var item in ViewBag.yazici)
            {
                <option value="@item.YaziciId" @(
                    (@item.YaziciId == @ViewBag.Kitab.KitabYaziciId) ? " selected" : "");>@item.YaziciAd</option>
            }
        </select>

        <br><br>
        <select name="KitabJanrId" id="editjanr" >
            @foreach (var item in ViewBag.janr)
            {
                <option value="@item.JanrId" @(
                    (@item.JanrId == @ViewBag.Kitab.KitabJanrId) ? "selected" : "");>@item.JanrAd</option>
            }
        </select>
        <br><br>
        <input type="submit" value="Submit">
    </form>
